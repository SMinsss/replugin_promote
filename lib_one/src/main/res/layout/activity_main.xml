<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ssjjsy.sdk.plugin.two.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is plugin two"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textColor="@color/colorPrimaryDark"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/btn_activity_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Activity"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to plugin one"
                android:textColor="@color/colorPrimaryDark"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/btn_activity_backToPluginOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Activity"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Same process to plugin one :p0"
                android:textColor="@color/colorPrimaryDark"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/btn_activity_sameProcessToPluginOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Activity"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other process to plugin one :p1"
                android:textColor="@color/colorPrimaryDark"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/transparent"/>
            <Button
                android:id="@+id/btn_activity_otherProcessToPluginOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Activity"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>

